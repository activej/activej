<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.activej</groupId>
    <artifactId>examples</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>examples-rpc</artifactId>
  <name>Examples : Cloud : RPC</name>

  <dependencies>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-rpc</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-memcache</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>RpcExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>RpcExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>AdvancedRpcClientApp</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>advancedrpc.AdvancedRpcClientApp</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>AdvancedRpcServerApp</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>advancedrpc.AdvancedRpcServerApp</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MemcacheLikeClient</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>memcached.MemcacheLikeClient</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MemcacheLikeServer</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>memcached.MemcacheLikeServer</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
