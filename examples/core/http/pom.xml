<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.activej</groupId>
    <artifactId>examples</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>examples-http</artifactId>
  <name>Examples : Core : Http</name>

  <dependencies>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-launchers-http</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-codec</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-specializer</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.github.spullara.mustache.java</groupId>
      <artifactId>compiler</artifactId>
      <version>0.9.4</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>BlockingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>BlockingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>CustomHttpServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CustomHttpServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>FileUploadExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>FileUploadExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HelloWorldExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HelloWorldExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpRequestParametersExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpRequestParametersExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MultithreadedHttpServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>MultithreadedHttpServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>RouterModuleExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>RouterModuleExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>RoutingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>RoutingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ScopeServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ScopeServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ServletDecoratorExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ServletDecoratorExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>StaticServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>StaticServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>WebSocketPingClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>WebSocketPingClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>WebSocketPongServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>WebSocketPongServerExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
