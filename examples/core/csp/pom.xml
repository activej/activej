<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.activej</groupId>
    <artifactId>examples</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>examples-csp</artifactId>
  <name>Examples : Core : CSP</name>

  <dependencies>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-csp</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>ByteBufsDecoderExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ByteBufsDecoderExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ChannelBufferStream</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ChannelBufferExample$ChannelBufferStream</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ChannelBufferZeroExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ChannelBufferExample$ChannelBufferZeroExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ChannelExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ChannelExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ChannelFileExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ChannelFileExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>CspExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>SplitterExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>SplitterExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
