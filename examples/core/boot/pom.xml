<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.activej</groupId>
    <artifactId>examples</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>examples-boot</artifactId>

  <name>Examples : Core : Boot</name>

  <dependencies>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-boot</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.activej</groupId>
      <artifactId>activej-promise</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <cleanupDaemonThreads>false</cleanupDaemonThreads>
        </configuration>
        <executions>
          <execution>
            <id>AdvancedServiceExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>AdvancedServiceExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ConfigModuleExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ConfigModuleExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>EventloopServiceExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>EventloopServiceExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HelloWorldExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HelloWorldExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MultithreadedWorkerCollab</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>MultithreadedWorkerCollab</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ServiceGraphModuleExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ServiceGraphModuleExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>SimpleServiceExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>SimpleServiceExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>WorkerPoolModuleExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>WorkerPoolModuleExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
